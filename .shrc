#!/bin/sh

# external imports
[ -e /usr/share/defaults/etc/profile.d/vte.sh ] && source /usr/share/defaults/etc/profile.d/vte.sh
[ -e ${HOME}/.shrc_secure ] && source "${HOME}/.shrc_secure"
[ -e ${HOME}/.shrc_sudo ] && source "${HOME}/.shrc_sudo"
[ -e ${HOME}/.shrc_os ] && source "${HOME}/.shrc_os"
[ -e ${HOME}/.shrc_local ] && source "${HOME}/.shrc_local"
[ -d ${HOME}/.cache/wal ] && (cat ~/.cache/wal/sequences &)

## exports
# system
export EDITOR="vi"
# customizations
export SVN_EDITOR="$EDITOR"
export ZSH_THEME="cypher"
export GOPATH="$HOME/.go"
# path
export PATH=$HOME/.local/bin:$GOPATH/bin:$HOME/.rvm/bin:$HOME/.npm/bin:/usr/local/sbin:/usr/local/bin:$PATH
# auxiliary
export _SUDO_CMDS="eopkg updatedb openvpn solbuild fdisk fastboot eject"
export _INST_CMDS="solbuild vscodium yadm tilix golang keepassx syncthing zsh pywal traho spotitube nuntius"

## aliases
alias npm="npm -g"
alias publicip="dig +short myip.opendns.com @resolver1.opendns.com"
alias vi="vim"
